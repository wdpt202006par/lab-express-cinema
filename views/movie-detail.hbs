<main class="movie-detail">
    <div class="image"><img src="{{movie.image}}"></div>
    <div class="texte">
        <a href="/movies">Back to list</a>
        <h1>{{movie.title}}</h1>
        <p>{{movie.description}}</p>
        <p>{{movie.director}}</p>
        <h2>Stars</h2>
        {{#each movie.stars}}
        <ul>
            <li>{{this}}</li>
        </ul>
        {{/each}}
        <p>{{description}}</p>
        <p>{{#each movie.showtimes}}
            {{this}} |
            {{/each}}</p>
    </div>

</main>