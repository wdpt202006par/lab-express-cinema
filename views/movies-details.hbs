
<div class="page-three">
    <div class="affiche">
        <div class="image-one">
            <img src="{{movies.image}}">
        </div>
        <div class="presentation-one">
            <a href="/movies">Go Back</a>
            <div class="title-one"><h2>{{movies.title}}</h2></div>
            <div class="director-one"><h3>Director: {{movies.director}}</h3></div>
            <div class="stars-one"><b>Stars:</b></div>
                {{#each movies.stars}}
                    <li>{{this}}</li>
                {{/each}}
            <div class="description-one">{{movies.description}}</div>
            <div class="showtimes-one">
                {{#each movies.showtimes}}
                    <li>{{this}}</li>
                {{/each}}
            </div>
        </div>
    </div>
</div>

    
    





   